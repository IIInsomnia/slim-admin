{% extends 'layouts/normal.twig' %}

{% block title %}修改密码{% endblock %}

{% block body_class %}login{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
            <div class="form-container">
                <div class="top-wrapper">
                    <div class="avatar-container">
                        <img src="/assets/curo/img/people/1.jpg" id="avatar" class="avatar animated bounceIn" alt="avatar">
                    </div>
                </div>
                <div class="bottom-wrapper">
                    <form id="ajax_form" class="login-form" role="form" action="{{ path_for('password') }}">
                        <div class="form-group has-feedback text-center">
                            <h4>{{ user.profile.username }}</h4>
                        </div>
                        <div class="form-group has-feedback">
                            <input type="password" name="password" class="form-control" placeholder="新密码" required="required" autofocus="autofocus">
                            <span class="fa fa-unlock-alt form-control-feedback"></span>
                        </div>
                        <div class="form-group has-feedback">
                            <input type="password" name="password_repeat" class="form-control" placeholder="确认密码" required="required">
                            <span class="fa fa-unlock-alt form-control-feedback"></span>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-green btn-block">确认修改</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block js %}
    <script type="text/javascript" src="assets/js/common/alert.js?v={{ version }}"></script>
    <script type="text/javascript" src="assets/js/common/form.js?v={{ version }}"></script>
{% endblock %}