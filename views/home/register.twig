{% extends 'layouts/normal.twig' %}

{% block title %}注册{% endblock %}

{% block body_class %}register{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
            <div class="form-container">
                <div class="top-wrapper">
                    <div class="avatar-container">
                        <img src="assets/curo/img/people/1.jpg" id="avatar" class="avatar animated bounceIn" alt="avatar">
                    </div>
                </div>
                <div class="bottom-wrapper">
                    <form id="ajax_form" class="register-form" role="form" action="#">
                        <div class="form-group has-feedback">
                            <input type="text" name="username" class="form-control" placeholder="用户名" required="required">
                            <span class="fa fa-user form-control-feedback"></span>
                        </div>
                        <div class="form-group has-feedback">
                            <input type="text" name="phone" class="form-control" placeholder="手机号" required="required">
                            <span class="fa fa-user form-control-feedback"></span>
                        </div>
                        <div class="form-group has-feedback">
                            <input type="email" name="email" class="form-control" placeholder="邮箱" required="required">
                            <span class="fa fa-user form-control-feedback"></span>
                        </div>
                        <div class="form-group has-feedback">
                            <input type="password" name="password" class="form-control" placeholder="密码" required="required">
                            <span class="fa fa-unlock-alt form-control-feedback"></span>
                        </div>
                        <div class="form-group has-feedback">
                            <input type="password" name="password_repeat" class="form-control" placeholder="确认密码" required="required">
                            <span class="fa fa-unlock-alt form-control-feedback"></span>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-green btn-block">注 册</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block js %}
    <script type="text/javascript" src="assets/js/common/alert.js?v={{ version }}"></script>
    <script type="text/javascript" src="assets/js/common/form.js?v={{ version }}"></script>
{% endblock %}